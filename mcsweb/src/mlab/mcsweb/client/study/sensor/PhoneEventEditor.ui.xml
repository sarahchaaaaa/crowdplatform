<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames="panel_border">
		<g:HTMLPanel ui:field="headingPanel">
			<b:Row>
				<b:Column size="MD_1 LG_1"/>
				<b:Column size="MD_5 LG_5">
					<b:Heading size="H4" text="Phone Events"></b:Heading>
				</b:Column>
				<b:Column size="MD_6 LG_6"/>
			</b:Row>
		</g:HTMLPanel>		
		<h:Hr></h:Hr>
		<g:HTMLPanel ui:field="defaultEventPanel">
			<b:Row>
				<b:Column size="MD_1 LG_1"/>
				<b:Column size="MD_5 LG_5">
					<b:CheckBox text="Screen Display On/Off" ui:field="displayEventCheckbox"></b:CheckBox>
				</b:Column>
				<b:Column size="MD_5 LG_5">
					<b:CheckBox text="Screen Lock/Unlock" ui:field="screenEventCheckbox"></b:CheckBox>
				</b:Column>
				<b:Column size="MD_1 LG_1"/>
			</b:Row>
			<b:Row>
				<b:Column size="MD_1 LG_1"/>
				<b:Column size="MD_5 LG_5">
					<b:CheckBox text="Battery Level" ui:field="batteryLevelCheckbox"></b:CheckBox>
				</b:Column>
				<b:Column size="MD_5 LG_5">
					<b:CheckBox text="Battery State" ui:field="batteryStateCheckbox"></b:CheckBox>
				</b:Column>
				<b:Column size="MD_1 LG_1"/>
			</b:Row>
			<b:Row>
				<b:Column size="MD_1 LG_1"/>
				<b:Column size="MD_5 LG_5">
					<b:CheckBox text="Network Change (Wi-Fi to LTE, Viceversa)" ui:field="networkEventCheckbox"></b:CheckBox>
				</b:Column>
			</b:Row>
			<b:Row>
				<b:Column size="MD_1 LG_1"/>
				<b:Column size="MD_5 LG_5">
					<b:CheckBox text="Call Incoming/Outgoing" ui:field="callEventCheckbox"></b:CheckBox>
				</b:Column>
				
			</b:Row>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="customEventPanel"></g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 