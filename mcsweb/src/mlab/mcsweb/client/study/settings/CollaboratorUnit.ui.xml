<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="MD_6">
				<b:TextBox placeholder="Email" ui:field="textEmail"></b:TextBox>
			</b:Column>
			<b:Column size="MD_6">
				<!--b:TextBox placeholder="Organization" ui:field="textOrg"></b:TextBox-->
				<g:Label ui:field="errorLabel"></g:Label>
			</b:Column>
		</b:Row>
		<h:Br></h:Br>
		<b:Row>
			<b:Column size="MD_3">
				<b:Button text="Submit" ui:field="buttonSubmit"></b:Button>
			</b:Column>
			<b:Column size="MD_3">
				<b:Button text="Cancel" ui:field="buttonCancel"></b:Button>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 