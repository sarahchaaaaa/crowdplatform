<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>

	<g:HTMLPanel>
		<h:Br></h:Br>
		<h:Br></h:Br>
		<b:Panel type="SUCCESS">
			<b:PanelHeader>
				<b:Heading size="H3" text="Add Device to Study" />
			</b:PanelHeader>
			<b:PanelBody>
				<g:HTMLPanel>
					<b:Row>
						<b:Column size="MD_6">
							<b:TextBox placeholder="Fitbit Email" ui:field="textFitbitEmail"></b:TextBox>
						</b:Column>
						<b:Column size="MD_6">
							<b:TextBox placeholder="Fitbit Password" ui:field="textFitbitPass"></b:TextBox>
						</b:Column>
					</b:Row>
					<h:Br></h:Br>
					<b:Row>
						<b:Column size="MD_3">
							<b:Button text="Add" ui:field="buttonAdd"></b:Button>
						</b:Column>
						<b:Column size="MD_3">
							<b:Button text="Cancel" ui:field="buttonCancel"></b:Button>
						</b:Column>
					</b:Row>
				</g:HTMLPanel>

			</b:PanelBody>
		</b:Panel>
	</g:HTMLPanel>
</ui:UiBinder> 
