<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="MD_2">
				<b:Button pull="RIGHT" text="Back" ui:field="backButton"></b:Button>
			</b:Column>
			<b:Column size="MD_7">
			
			</b:Column>
			<b:Column size="MD_3">
				<b:Button pull="LEFT" text="Save" ui:field="saveButton"></b:Button>
				<b:Button text="Publish" ui:field="publishButton"></b:Button>
			</b:Column>
		</b:Row>
		<h:Br></h:Br>
		<b:Row>
			<b:Column size="MD_3">
			</b:Column>
			<b:Column size="MD_6">
				<b:Row>
					<g:HTMLPanel ui:field="schedulePanel"></g:HTMLPanel>
				</b:Row>
				<h:Br></h:Br>
				<h:Br></h:Br>
				<b:Heading size="H4" text="Question" ui:field="taskEditorHeading"></b:Heading>
				<b:Row>
					<g:HTMLPanel ui:field="taskPanel"></g:HTMLPanel>
				</b:Row>
			</b:Column>
			<b:Column size="MD_3" ui:field="rightPanel">
				<g:VerticalPanel addStyleNames="panel_border">
					<b:Button text="Add Question" size="LARGE" type="PRIMARY" ui:field="addTaskButton"></b:Button>					
				</g:VerticalPanel>
			</b:Column>
		
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 