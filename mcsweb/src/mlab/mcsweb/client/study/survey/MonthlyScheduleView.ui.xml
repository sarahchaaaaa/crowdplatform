<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:ex="urn:import:org.gwtbootstrap3.extras.select.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.center_align{
		text-align: center;
	}
	.red{
		color:red;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="MD_2 LG_2">
				<b:InlineRadio name="radio2" formValue="value21" text="Day" ui:field="radioDay" />
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:IntegerBox ui:field="dayBox"></b:IntegerBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<g:Label>of every</g:Label>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:IntegerBox ui:field="monthBox"></b:IntegerBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<g:Label>month(s)</g:Label>
			</b:Column>
		</b:Row>
		<h:Br></h:Br>
		<b:Row>
			<b:Column size="MD_1 LG_1">
				<b:InlineRadio name="radio2" formValue="value22" text="" ui:field="radioSelect" />
			</b:Column>
			<b:Column size="MD_3 LG_3">
				<ex:Select ui:field="weekSelect">
					<ex:Option text="First" value="1"></ex:Option>
					<ex:Option text="Second" value="2"></ex:Option>
					<ex:Option text="Third" value="3"></ex:Option>
					<ex:Option text="Fourth" value="4"></ex:Option>
				</ex:Select>
			</b:Column>
			<b:Column size="MD_3 LG_3">
				<ex:Select ui:field="daySelect">
					<ex:Option text="Monday" value="1"></ex:Option>
					<ex:Option text="Tuesday" value="2"></ex:Option>
					<ex:Option text="Wednesday" value="3"></ex:Option>
					<ex:Option text="Thursday" value="4"></ex:Option>
					<ex:Option text="Friday" value="5"></ex:Option>
					<ex:Option text="Saturday" value="6"></ex:Option>
					<ex:Option text="Sunday" value="7"></ex:Option>
				</ex:Select>
			</b:Column>
			<b:Column size="MD_1 LG_1">
				<g:Label>of every</g:Label>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:IntegerBox ui:field="altMonthBox"></b:IntegerBox>
			</b:Column>
			<b:Column size="MD_1 LG_1">
				<g:Label>month(s)</g:Label>
			</b:Column>
		</b:Row>
		<h:Br></h:Br>
		<b:Row addStyleNames="{style.center_align} {style.red}">
			<g:Label ui:field="errorLabel"></g:Label>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 