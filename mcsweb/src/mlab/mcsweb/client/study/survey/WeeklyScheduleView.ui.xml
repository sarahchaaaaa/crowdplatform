<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.red{
		color:red;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="MD_3 LG_3">
				<g:Label>Recurr every</g:Label>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:IntegerBox ui:field="weekBox"></b:IntegerBox>
			</b:Column>
			<b:Column size="MD_3 LG_3">
				<g:Label>week(s) on: </g:Label>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="monCheckbox">Mon</b:CheckBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="tueCheckbox">Tue</b:CheckBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="wedCheckbox">Wed</b:CheckBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="thuCheckbox">Thu</b:CheckBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="friCheckbox">Fri</b:CheckBox>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="satCheckbox">Sat</b:CheckBox>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:CheckBox ui:field="sunCheckbox">Sun</b:CheckBox>
			</b:Column>
		</b:Row>
		<h:Br></h:Br>
		<g:Label ui:field="errorLabel" addStyleNames="{style.red}"></g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 