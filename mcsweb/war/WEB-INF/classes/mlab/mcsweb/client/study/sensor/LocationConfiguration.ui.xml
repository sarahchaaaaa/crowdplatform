<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.panel_bck {
		background-color: #FFFFFA;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Row addStyleNames="panel_border" ui:field="headerRow">
			<b:Column size="MD_1 LG_1"></b:Column>
			<b:Column size="MD_5">
				<b:Heading size="H4" text="Location"></b:Heading>
			</b:Column>
			<b:Column size="MD_1 LG_1">
				<b:Button size="LARGE" ui:field="timeButton"></b:Button>
			</b:Column>
			<b:Column size="MD_1 LG_1">
				<b:Button size="LARGE" ui:field="batteryButton"></b:Button>
			</b:Column>
			<b:Column size="MD_3 LG_3"></b:Column>
			
			<b:Column size="MD_1 LG_1">
				<b:Button type="LINK" ui:field="collapseButton" size="LARGE">Edit</b:Button>
			</b:Column>
		</b:Row>

		<g:HTMLPanel styleName="panel_border" ui:field="configDetailsPanel">

		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 