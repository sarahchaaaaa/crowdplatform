<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.margin{
		margin-left: 5%;
		margin-right: 5%;
		margin-top:2%;
		margin-bottom:2%
	}
	
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.margin}" ui:field="constraintPanel">
		<b:Row>
			<b:Column size="MD_5 LG_5">
				<g:Label>+ Stop when battery goes under </g:Label>
			</b:Column>
			<b:Column size="MD_2 LG_2">
				<b:IntegerBox maxLength="2"></b:IntegerBox>
			</b:Column>
			<b:Column size="MD_1 LG_1">
				<g:Label>%</g:Label>
			</b:Column>
			<b:Column size="MD_1 LG_1">
				<b:Anchor ui:field="closeAnchor"></b:Anchor>
			</b:Column>			
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 