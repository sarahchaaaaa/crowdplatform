		<url-pattern>/mcsweb/labeling</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>participantServlet</servlet-name>
		<servlet-class>mlab.mcsweb.server.ParticipantServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>participantServlet</servlet-name>
		<url-pattern>/mcsweb/participant</url-pattern>
	</servlet-mapping>

	<servlet>
